  "main": "./dist/@ui-puzzles/trigon.umd.js",
  "module": "./dist/@ui-puzzles/trigon.esm.js",
  "homepage": "",
  "scripts": {
    "dev": "vite",
    "run:demo": "vite",
    "build": "pnpm build:components",
    "build:all": "vite build",
    "build:components": "esno ./scripts/build.ts",
    "docs:dev": "vitepress dev docs --config ./vite.config.ts",
    "docs:build": "vitepress build docs --config ./vite.config.ts",
    "docs:serve": "vitepress serve docs --config ./vite.config.ts",
    "lint": "eslint --fix --ext .ts,.vue src",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.vue\"",
    "test": "vitest",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "vue3",
    "UI Components",
    "Vite"
  ],
  "files": [
    "dist"
  ],
  "author": {
    "email": "fujia.site@gmail.com",
